menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/tasks-count]
type = custom/script

exec = task count status:pending
label = %output% t
interval = 30

format-underline = #a000d2
format-prefix = "üñß "
format-prefix-foreground = #5b

[module/pinger]
type = custom/script

exec = ping -W 1 -A -c 1 -s 1 $(cat ~/.ping_host) &> /dev/null && echo ÓÅñ || echo ÓÉ¶
label = %output%
interval = 3

format-underline = #111111
format-prefix = "ÓÇ©"
format-prefix-foreground = #5b

