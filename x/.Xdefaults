#include "/dev/shm/current-theme"
!# vim:foldlevel=0
!# vim:foldmethod=marker

!# configuration {{{1
urxvt*perl-lib:			/usr/local/lib/urxvt/perl
urxvt*perl-ext-common:	default,matcher,clipboard-osc,font-size,rotate-colors
URxvt*matcher.button:   1
urxvt*cursorUnderline:  0
urxvt*letterspace:      4
urxvt*fading: 			11
urxvt*fadeColor: 		#000000
urxvt*cursorBlink:		true
urxvt*scrollBar:		false
urxvt*depth:			32 
urxvt*internalBorder: 	4
urxvt*dynamicColors:    on
urxvt.urgentOnBell:     true
urxvt*transparent: false
urxvt*shading: 4

!# xcursor {{{1
Xcursor.theme:~/.icons/ATER-yellow

!# font change settings {{{1
URxvt.iso14755:         false
URxvt.iso14755_52:      false
URxvt.keysym.C-equal:	perl:font-size:increase
URxvt.keysym.C-minus:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

!# current font {{{1
!urxvt.font: xft:DejaVu Sans Mono:pixelsize=10
!urxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=10:weight=bold

!urxvt.font: xft:Inconsolata for Powerline:pixelsize=13
!urxvt.boldFont: xft:Inconsolata for Powerline:pixelsize=13:weight=bold

!urxvt.font: xft:Inconsolata LGC:pixelsize=11
!urxvt.boldFont: xft:Inconsolata LGC:pixelsize=11:weight=bold

!urxvt.font: xft:Monofur:pixelsize=10
!urxvt.boldFont: xft:Monofur:pixelsize=10:weight=bold

!urxvt.font: xft:Terminus:pixelsize=10
!urxvt.boldFont: xft:Terminus:pixelsize=10:weight=bold

urxvt.font: xft:Source Code Pro:pixelsize=11
urxvt.boldFont: xft:Source Code Pro:pixelsize=11:weight=bold

!urxvt.font: xft:Input:pixelsize=12
!urxvt.boldFont: xft:Input:pixelsize=14:weight=bold

!urxvt.font: -misc-liberation mono-medium-i-normal--0-0-0-0-m-0-koi8-ru
!urxvt.boldFont: -misc-liberation mono-bold-i-normal--0-0-0-0-m-0-koi8-ru

!urxvt.font: xft:Ubuntu Mono:pixelsize=15
!urxvt.boldFont: xft:Ubuntu Mono:pixelsize=15:weight=bold

!# xft settings {{{1
Xft.antialias: true
Xft.autohint: 0
Xft.dpi: 104.47
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

!# xclock {{{1
xclock*majorColor: #9a875f
xclock*minorColor: #9a875f
xclock*minuteColor: #9a875f
xclock*hourColor: #9a875f
xclock*secondColor: #9a875f
